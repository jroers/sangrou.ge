<div class="container fade-in" id="login-form">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 form">

      <%= form_for @user, url: "/sessions", method: "post" do |f| %>
        <fieldset>
          <legend class="centered">Login</legend>

          <div class="form-group">
            <label class="col-sm-4 control-label" for="email">Email</label>
            <div class="col-sm-8">
              <%= f.text_field :email, required: true, placeholder: "example@example.com", class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-4 control-label" for="password">Password</label>
            <div class="col-sm-8">
              <%= f.password_field :password, required: true, placeholder: "Password", class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-12">
              <%= f.submit "Login", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>

    </div>
  </div>
</div>
