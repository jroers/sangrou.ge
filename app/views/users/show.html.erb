<div class="container fade-in">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			
			<div class="col-sm-6">
				<div class="col-xs-12 centered">
					<h2>Previous Donor</h2>
				</div>
				<%= form_tag(users_path, method: "get", id: "search-form") do %>
				<div class="col-xs-12">
					<%= text_field_tag :search, params[:search], required: true, placeholder: "Donor ID or Email", class: "form-control" %><br>
				</div>
				<div class="col-xs-12">
					<%= submit_tag "Find Donor", class: "btn btn-primary form-control" %>
				</div>
				<% end %>
			</div>
			
			<div class="col-sm-6 centered">
				<div class="col-xs-12">
					<h2>New Donor</h2>
				</div>
				<div class="col-xs-12">
					<%= button_to "Create Donor", '/donations/new/new_donor', method: "get", class: "btn btn-primary form-control" %>
				</div>
			</div>

		</div>
	</div>
</div>