<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			
			<div class="col-sm-6">
				<div class="col-xs-12 centered">
					<h2>Previous Donor</h2>
				</div>
				<div class="col-xs-12">
					<input type="number" class="form-control" placeholder="Donor ID"></input><br>
				</div>
				<div class="col-xs-12">
					<button class="btn btn-primary form-control">Find</button>
				</div>
			</div>
			
			<div class="col-sm-6 centered">
				<div class="col-xs-12">
					<h2>New Donor</h2>
				</div>
				<div class="col-xs-12">
					<%= button_to "Create Donor", donor_signup_path, method: "get", class: "btn btn-primary form-control" %>
				</div>
			</div>

		</div>
	</div>
</div>