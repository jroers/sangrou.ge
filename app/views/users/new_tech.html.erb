<h1><%= @organization.name %></h1>
<div class="container" id="tech-signup-form">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 form">
		<%= form_for @user do |f| %>
			<fieldset>
		    <legend>Signup</legend>

		    <div class="form-group">
		      <label class="col-md-4 control-label" for="first">First name:</label>
		      <div class="col-md-8">
		        <%= f.text_field :first, required: true, placeholder: "John", class: "form-control" %><br>
		      </div>
		    </div>

		    <div class="form-group">
		      <label class="col-md-4 control-label" for="last">Last name:</label>
		      <div class="col-md-8">
		        <%= f.text_field :last, required: true, placeholder: "Doe", class: "form-control" %><br>
		      </div>
		    </div>

		    <div class="form-group">
		      <label class="col-md-4 control-label" for="email">Email address:</label>
		      <div class="col-md-8">
		        <%= f.text_field :email, required: true, placeholder: "name@example.com", class: "form-control" %><br>
		      </div>
		    </div>

		    <div class="form-group">
		      <label class="col-md-4 control-label" for="password">Password</label>
		      <div class="col-md-8">
		        <%= f.password_field :password, required: true, placeholder: "Password", class: "form-control" %>
		        <%= f.hidden_field :organization_domain, value: @organization.email_domain %>
		        <%= f.hidden_field :organization_id, value: @organization.id %><br>
		      </div>
		    </div>

		    <div class="form-group">
		      <div class="col-md-12">
		        <%= f.submit "Sign up", class: "btn btn-success" %>
		      </div>
		    </div>

		  </fieldset>
		<% end %>
		</div>
	</div>
</div>